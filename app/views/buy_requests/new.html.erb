<div class="container">
  
  <div class="row">
    <div class="col-xs-12">
      <h2>Buy <%= @team.name %></h2>
    </div>
  </div>

  <div class="row padding">
    <div class="col-xs-5">
      <p><strong>Funds:</strong> <%= current_user.funds %></p>
    </div>
  </div>
  
  <div class="row padding">
    <div class="col-xs-5">
      <p><strong>Avilable Funds:</strong> <%= current_user.available_funds %></p>
    </div>
  </div>

  <%= form_for(@buy_request, url: buy_team_path(@team), method: 'post') do |form| %>
  <% if @buy_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sell_request.errors.count, "error") %> prohibited this sell_request from being saved:</h2>
  
      <ul>
      <% @sell_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="row padding">
      <%= form.label :price, class: 'col-xs-2 control-label' %>
        <div class="col-xs-10">
          <%= form.text_field :price, class: 'form-control' %>
        </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="row padding-top">
      <%= form.label :amount, class: 'col-xs-2 control-label' %>
        <div class="col-xs-10">
          <%= form.number_field :amount, class: 'form-control' %>
        </div>
    </div>
  </div>
  
  <div class="actions">
    <div class="row padding col-xs-offset-2">
      <%= form.submit "Buy" , :class => "btn btn-primary outline" %> | 
      <%= link_to 'Cancel', team_sell_requests_path(@team), class: 'btn btn-primary outline' %>
    </div>
  </div>
  <% end %>

</div>
