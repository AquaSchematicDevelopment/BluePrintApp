


<div class="" id="loginModal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>Sign In</h3>
	</div>
<div class="modal-body">
	<div class="well">
	<div id="myTabContent" class="tab-content">
		<div class="tab-pane active in" id="login">
		  <%= form_for(:session, url: login_path, class:'form-horizontal') do |f| %>
				<fieldset>
					<div id="legend">
						<legend class="">Login</legend>
					</div>
					<% if @errors && @errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@errors.count, "error") %>:</h2>

            <ul>
              <% @errors.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
					<div class="control-group">
						<!-- Username -->
						<label class="control-label"  for="username">Username</label>
						<div class="controls">
						  <%= f.text_field :user_name, class: 'input-xlarge' %>
						</div>
					</div>
					<div class="control-group">
						<!-- Password-->
						<label class="control-label" for="password">Password</label>
						<div class="controls">
						  <%= f.password_field :password, class: 'input-xlarge' %>
						</div>
					</div>
					<div class="control-group">
						<!-- Button -->
						<div class="controls">
						  <%= f.submit 'Login', class:'btn btn-success' %>
						</div>
					</div>
				</fieldset>
			<% end %>
		</div>
	</div>
</div>
