<div class="container">
	<div class="" id="loginModal">
		<div class="row modal-header">
			<h2>Log In</h2>
		</div>
	<div class="modal-body">
		<div class="well">
			<div id="myTabContent" class="tab-content">
		  	<%= form_for(:session, url: login_path, class:'form-horizontal') do |f| %>
					<fieldset>
					
						<div class="control-group">
							<!-- Username -->
							<div class="row padding-bottom">
								<label class="control-label"  for="username">Username</label>
									<div class="controls">
						  			<%= f.text_field :user_name, class: 'input-xlarge' %>
									</div>
							</div>
						</div>

						<div class="control-group">
							<!-- Password-->
							<div class="row">
								<label class="control-label" for="password">Password</label>
								<div class="controls">
						  		<%= f.password_field :password, class: 'input-xlarge' %>
								</div>
							</div>
						</div>
					
						<div class="control-group">
							<!-- Button -->
							<div class="row padding">
								<div class="controls">
						  		<%= f.submit 'Login', class:'btn btn-success' %>
						  	</div>
							</div>
						</div>
					</fieldset>
				<% end %>
			</div>
		</div>
	</div>
</div>
