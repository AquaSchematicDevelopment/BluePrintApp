<div class="row padding">
  <div class="col-xs-4">
    <p><b>Team</b></p>
  </div>
  <div class="col-xs-3">
    <center><p><b>Price</b></p></center>
  </div>
  <div class="col-xs-3">
    <center><p><b>Amount</b></p></center>
  </div>
</div>

<% @sell_requests.each_with_index do |sell_request, index| %>
  <div class="row <%= index.even? ? 'even-row' : 'odd-row' %>">
    <div class="col-xs-4 vcenter">
      <p><%= sell_request.team.name %></p>
    </div>
    <div class="col-xs-3 vcenter">
      <center><p><%= sell_request.price %></p></center>
    </div>
    <div class="col-xs-3 vcenter">
      <center><p><%= sell_request.amount %></p></center>
    </div>
    <div class="col-xs-2 padding-top padding-bottom">
      <%= link_to 'Delete', delete_sell_request_path(sell_request),  method: :delete, class: 'btn btn-primary outline', data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
