<div class="container">
  <div class="row">
    <h2>Edit Team</h2>
  </div>
  
  <%= form_for(@team, url:edit_team_path(@team), method: 'post') do |form| %>
    <% if @team.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>
  
        <ul>
        <% @team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <div class="row padding">
        <%= form.label :name, class: 'col-xs-2 control-label' %>
          <div class="col-xs-10">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
      </div>
    </div>
  
    <div class="actions">
      <div class="row padding col-xs-offset-2">
        <%= form.submit "Edit" , :class => "btn btn-primary outline" %> |
        <%= link_to 'Back', show_season_path(@team.season), class: 'btn btn-primary outline' %>
      </div>
    </div>
  <% end %>
  
</div>
