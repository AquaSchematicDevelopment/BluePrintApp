<div class="container">
  <div class="row">
    <h1>New Team</h1>
  </div>
  
  <%= form_for(@team, url: add_team_path(params[:season_id])) do |f| %>
    <% if @team.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>
  
        <ul>
        <% @team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <div class="row">
        <%= f.label :name %>
      </div>
      <div class="row">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="actions">
      <div class="row">
   		  <%= f.submit "Add" , :class => "btn btn-primary outline" %>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <%= link_to 'Back', show_season_path(params[:season_id]), class: 'btn btn-primary outline' %>
  </div>

</div>
