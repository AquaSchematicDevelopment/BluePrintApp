<div class="container">

  <div class="row">
    <h2>Add New Sport</h2>
  </div>
  
  <%= form_for(@sport, url: new_sport_path) do |form| %>
   	<div class="form-group">
   	  <div class="row padding">
   	    <%= form.label 'Sport', class: 'col-xs-2 control-label' %>
   		  <div class="col-xs-10">
   		    <%= form.text_field :name, class: 'form-control' %>
   		  </div>
   		</div>
   	</div>
   	<div class="form-group">
   	  <div class="row padding">
   		  <div class="col-xs-offset-2 col-xs-10">
   		    <%= form.submit 'Add Sport', class: 'btn btn-primary outline' %>
   		    <%= link_to 'Back', show_sport_path(params[:sport_id]), class: 'btn btn-primary outline' %>
   		   </div>
   		</div>
   	</div>
  <% end %>
  
</div>
