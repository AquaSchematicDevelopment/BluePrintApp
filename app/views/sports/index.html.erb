<style>
div.col-xs-6 {
  border-style: solid;
  border-width: 1px;
}
div.col-xs-1 {
  border-style: solid;
  border-width: 0px;
}
.btn-primary {
  background: #0099cc;
  color: #ffffff;
  border-radius:0;
}
</style>

<div class="container">
  <div class="row">
    <h2>Sports List</h2>
    <h3>Name</h3>
  </div>

  <% @sports.each do |sport| %>
  <div class="row">  
    <div class="col-xs-9">
      <p><h3><%= sport.name %></h3></p>
    </div>
	<div class="col-xs-1">
      <p><%= link_to 'Show', show_sport_path(sport), class: 'btn btn-primary' %></p>
    </div>
	<div class="col-xs-1">
      <p><%= link_to 'Edit', edit_sport_path(sport), class: 'btn btn-primary' %></p>
    </div>
    <div class="col-xs-1">
      <p><%= link_to 'Destroy', delete_sport_path(sport), method: :delete, class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %></p>
    </div>
  </div>
  <% end %>
  
<div style="padding-top:20px;" class="row">
    <%= link_to 'New Sport', new_sport_path, class: 'btn btn-primary' %>
</div>

</div>
