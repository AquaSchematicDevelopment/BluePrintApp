<div class="container">
  <div class="row">
    <h2>Edit Sport</h2>
  </div>

  <%= form_for(@sport, url: edit_sport_path(@sport.id), method: 'post') do |form| %>
    <% if @sport.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@sport.errors.count, "error") %> prohibited this sport from being saved:</h2>
  
        <ul>
        <% @sport.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <div class="row">
        <%= form.label :name %>
      </div>
      <div class="row">
        <%= form.text_field :name %>
      </div>
    </div>
    <div class="row padding">
      <%= form.submit "Edit" , :class => "btn btn-primary outline" %> |
      <%= link_to 'Back', sports_path, class: 'btn btn-primary outline' %>
    </div>
  <% end %>
  
  <!--<%= link_to 'Show', show_sport_path(@sport), class: 'btn btn-primary outline' %>-->

</div>
