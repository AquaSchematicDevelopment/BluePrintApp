<style>

  div.col-md-3 {
    margin-top:50px;
    border-style: solid;
    border-width: 1px;
  }
  
  div.col-md-9 {
    margin-top:50px;
    border-style: solid;
    border-width: 1px;
  }
  
  .btn-primary {
    background: #0099cc;
    color: #ffffff;
    border-radius:0;
}

</style>

<div class="container">
  
  <p id="notice"><%= notice %></p>
  
  <h2>League</h2>
  
  <div class="row">
    <p>
      <strong>Name:</strong>
      <%= @league.name %>
    </p>
  </div>
  <div class="row">
    <p>
      <strong>Sport:</strong>
      <%= @league.sport.name %>
    </p>
  </div>
  
  <%= link_to 'Edit', edit_league_path(@league), class: 'btn btn-primary' %> |
  <%= link_to 'Back', show_sport_path(@league.sport), class: 'btn btn-primary' %>
  
  <h3>Seasons</h3>
  
  <%= render 'seasons/index' %>
  
  <%= link_to 'Add Season', add_season_path(@league) %>
  
</div>
