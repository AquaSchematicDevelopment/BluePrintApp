<style>

  div.col-xs-11 {
    margin-top:50px;
    border-style: solid;
    border-width: 1px;
  }
  
  div.col-xs-1 {
    margin-top:50px;
    border-style: solid;
    border-width: 0px;
  }
  
  .btn-primary {
    background: #0099cc;
    color: #ffffff;
    border-radius:0;
}

</style>

<div class="container">

  <h2>League</h2>
  
  <p>
    <strong>Name:</strong>
    <%= @league.name %>
  </p>

  <div class="col-xs-11">
    <p>
      <strong>Sport:</strong>
      <%= @league.sport.name %>
    </p>
  </div>
  
  <div class="col-xs-1">
    <%= link_to 'Edit', edit_league_path(@league), class: 'btn btn-primary' %>
  </div>
  
  <%= link_to 'Back', show_sport_path(@league.sport), class: 'btn btn-primary' %>
  
  <h3>Seasons</h3>
  
  <%= render 'seasons/index' %>
  
  <%= link_to 'Add Season', add_season_path(@league) %>
  
</div>

