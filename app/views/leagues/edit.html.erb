<div class="container">
  <div class="row">
    <h2>Edit League</h2>
  </div>

  <%= form_for(@league, url: edit_league_path(@league), method: 'post') do |form| %>
    <% if @league.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@league.errors.count, "error") %> prohibited this league from being saved:</h2>
  
        <ul>
        <% @league.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <div class="row padding">
        <%= form.label :name, class: 'col-xs-2 control-label' %>
          <div class="col-xs-10">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
      </div>
    </div>
    <div class="row padding">
      <%= f.submit "Edit" , :class => "btn btn-primary outline" %> |
      <%= link_to 'Back', show_sport_path(@league.sport), class: 'btn btn-primary outline' %>
    </div>
  <% end %>
  
  <!--<%= link_to 'Show', show_league_path(@league), class: 'btn btn-primary outline' %>-->

</div>
