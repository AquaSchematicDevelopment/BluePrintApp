<style>
div.col-xs-9 {
  border-style: solid;
  border-width: 1px;
}
div.col-xs-1 {
  border-style: solid;
  border-width: 0px;
}
.btn-primary {
  background: #0099cc;
  color: #ffffff;
  border-radius:0;
}
</style>

<div class="container">
  <div class="row">
    <h2>Name</h2>
  </div>

  <% @leagues.each do |league| %>
    <div class="row">
      <div class="col-xs-9">
        <p><%= league.name %></p>
      </div>
      <div class="col-xs-1">
        <p><%= link_to 'Show', show_league_path(league), class: 'btn btn-primary' %></p>
      </div>
      <div class="col-xs-1">
        <p><%= link_to 'Edit', edit_league_path(league), class: 'btn btn-primary' %></p>
      </div>
      <div class="col-xs-1">
        <p><%= link_to 'Delete', delete_league_path(league),  method: :delete, class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  <% end %>
</div>
