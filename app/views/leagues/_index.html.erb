<% @leagues.each_with_index do |league, index| %>
  <div class="row <%= index.even? ? 'even-row' : 'odd-row' %>">
    <div class="col-xs-8 vcenter">
      <p><%= league.name %></p>
    </div>
    <div class="col-xs-4 padding-top padding-bottom">
      <%= link_to 'Show', show_league_path(league), class: 'btn btn-primary outline' %> |
      <%= link_to 'Edit', edit_league_path(league), class: 'btn btn-primary outline' %> |
      <%= link_to 'Delete', delete_league_path(league),  method: :delete, class: 'btn btn-primary outline', data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
