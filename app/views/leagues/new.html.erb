<div class="container">
  <div class="row">
    <h1>New League</h1>
  </div>
  
  <%= form_for(@league, url: add_league_path(params[:sport_id])) do |f| %>
  
    <div class="field">
      <div class="row">
        <%= f.label :name %><br>
      </div>
      <div class="row padding-top padding-bottom">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="actions">
      <div class="row">
        <%= f.submit "Add" , :class => "btn btn-primary outline" %>
      </div>
    </div>
  <% end %>
  
  <div class="row padding">
    <%= link_to 'Back', show_sport_path(params[:sport_id]), class: 'btn btn-primary outline' %>
  </div>

</div>
