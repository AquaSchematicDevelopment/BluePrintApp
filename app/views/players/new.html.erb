<div class="container">
  
  <div class="row">
    <h2>Register New User</h2>
  </div>
  
  <%= form_for(:player, url: new_player_path) do |form| %>
   	<div class="form-group">
   	  <div class="row padding">
   	    <%= form.label 'Username', class: 'col-xs-2 control-label' %>
   		  <div class="col-xs-10">
   		    <%= form.text_field :name, class: 'form-control' %>
   		  </div>
   		</div>
   	</div>
    <div class="form-group">
      <div class="row">
        <%= form.label 'Email', class: 'col-xs-2 control-label' %>
   			<div class="col-xs-10">
   			  <%= form.email_field :email, class: 'form-control' %>
   			</div>
 			</div>
 	  </div>
   	<div class="form-group">
   	  <div class="row">
   	    <%= form.label 'Password', class: 'col-xs-2 control-label' %>
   			  <div class="col-xs-10">
   			    <%= form.password_field :password, class: 'form-control' %>
   			  </div>
   		 </div>
   	</div>
   	<div class="form-group">
   	  <div class="row">
   	    <%= form.label 'Confirm Password', class: 'col-xs-2 control-label' %>
   			  <div class="col-xs-10">
   			    <%= form.password_field :password_confirmation, class: 'form-control' %>
   			  </div>
   			</div>
   	</div>
   	<div class="form-group">
   	  <div class="row">
   		  <div class="col-xs-offset-2 col-xs-10">
   		    <%= form.submit 'Create Player', class: 'btn btn-primary outline padding' %>
   		  </div>
   	  </div>
   	</div>
  <% end %>
  
</div>
