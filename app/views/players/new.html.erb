<style>

col-lg-offset-2 col-lg-10 {
  margin-top: 50px;

}

</style>

<div class="container">
  
  <h2>Register New User</h2>
  
  <%= form_for(:player, url: new_player_path) do |form| %>
   	<div class="form-group">
   	  <%= form.label 'Username', class: 'col-lg-2 control-label' %>
   		<div class="col-lg-10">
   		  <%= form.text_field :name, class: 'form-control' %>
   		</div>
   	</div>
      <div class="form-group">
        <%= form.label 'Email', class: 'col-lg-2 control-label' %>
   			<div class="col-lg-10">
   			  <%= form.email_field :email, class: 'form-control' %>
   			</div>
   	</div>
   	<div class="form-group">
   	  <%= form.label 'Password', class: 'col-lg-2 control-label' %>
   			<div class="col-lg-10">
   			  <%= form.password_field :password, class: 'form-control' %>
   			</div>
   	</div>
   	<div class="form-group">
   	  <%= form.label 'Confirm Password', class: 'col-lg-2 control-label' %>
   			<div class="col-lg-10">
   			  <%= form.password_field :password_confirmation, class: 'form-control' %>
   			</div>
   	</div>
   	<div class="form-group">
   		<div class="col-lg-offset-2 col-lg-10">
   		  <%= form.submit 'Create Player', class: 'btn btn-primary' %>
   		</div>
   	</div>
  <% end %>
  
</div>
