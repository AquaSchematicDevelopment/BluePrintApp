<% @seasons.each_with_index do |season, index| %>
  <div class="row">
    <div class="col-xs-2 vcenter">
      <center><b><p>Season Name</p></b></center>
    </div>
    <div class="col-xs-2 vcenter">
      <center><b><p>Season Status</p></b></center>
    </div>
  </div>
  <div class="row <%= index.even? ? 'even-row' : 'odd-row' %>">
    <div class="col-xs-2 vcenter">
      <center><p><%= season.name %></p></center>
    </div>
    <div class="col-xs-2 vcenter">
      <center><p><%= season.formatted_status %></p></center>
    </div>
    <div class="col-xs-4 col-xs-offset-4 padding-top padding-bottom">
      <%= link_to 'Show', show_season_path(season), class: 'btn btn-primary outline' %> |
      <%= link_to 'Edit', edit_season_path(season), class: 'btn btn-primary outline' %> |
      <%= link_to 'Delete', delete_season_path(season), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary outline' %>
    </div>
  </div>
<% end %>
