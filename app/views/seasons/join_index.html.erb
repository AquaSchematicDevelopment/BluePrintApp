<div class="container">
  <div class="row">
    <h1>Join Season<h1>
  </div>
  
  <% if @seasons.empty? %>
    <center><h3> Currently, there are no seasons available for you to join. Please check again soon or contact your administrator.  </h3></center>
    
  <% else %>
    <% @seasons.each_with_index do |season, index| %>
    <div class="row <%= index.even? ? 'even-row' : 'odd-row' %>">
      <div class="col-xs-4 vcenter">
        <p><%= season.league.name %> | <%= season.name %></p>
      </div>
      <div class="col-xs-2 col-xs-offset-6 padding-top padding-bottom">
        <%= link_to 'Join', join_season_path(season), method: 'post', class: 'btn btn-primary outline' %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
