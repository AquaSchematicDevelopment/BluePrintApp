<div class="container">
  <div class="row">
    <h2>Edit Season</h2>
  </div>

  <%= form_for(@season, url: edit_season_path(@season), method: 'post') do |f| %>
    <% if @season.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@season.errors.count, "error") %> prohibited this season from being saved:</h2>
  
        <ul>
        <% @season.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <div class="row">
        <%= f.label :name %>
      </div>
      <div class="row">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row padding-top padding-below">
      <%= f.submit %>
    </div>
  <% end %>
  
  <div class="row padding">
    <%= link_to 'Show', show_season_path(@season), class: 'btn btn-primary' %> |
    <%= link_to 'Back', show_league_path(@season.league), class: 'btn btn-primary' %>
  </div>
  
</div>
