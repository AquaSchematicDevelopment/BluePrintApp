<div class="container">
  <h1>New Season</h1>
  
  <%= form_for(@season, url: add_season_path(params[:league_id])) do |f| %>
    <% if @season.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@season.errors.count, "error") %> prohibited this season from being saved:</h2>
  
        <ul>
        <% @season.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  
  <%= link_to 'Back', show_league_path(params[:league_id]) %>
</div>
