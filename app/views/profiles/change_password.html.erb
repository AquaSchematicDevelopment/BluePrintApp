<div class="container">
  <div class="row">
    <h2>Change Password</h2>
  </div>
  <%= form_for(:profile, url: change_password_path) do |form| %>
    <div class="row padding-top padding-bottom">
      <div class="col-xs-2">
        <%= form.label 'New Password' %>
      </div>
      <div class="col-xs-4">
        <%= form.password_field :new_password %>
      </div>
    </div>
    <div class="row padding-top padding-bottom">
      <div class="col-xs-2">
        <%= form.label 'Confirm Password' %>
      </div>
      <div class="col-xs-4">
        <%= form.password_field :password_confirmation %>
      </div>
    </div>
    <div class="row padding-top padding-bottom">
      <div class="col-xs-2">
        <%= form.label 'Old Password' %>
      </div>
      <div class="col-xs-4">
        <%= form.password_field :old_password %>
      </div>
    </div>
    <div class="row padding">
      <%= form.submit 'Change Password', class: 'btn btn-primary outline' %>
    </div>
  <% end %>
  
</div>
