<div class="container">
  <div class="row">
      <h1>Financial Statistics</h1>
      <p id="notice"><%= notice %></p>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <p>
        <strong>Funds:</strong>
      </p>
    </div>
    <div class="col-xs-4">
      <p>
        <strong>Available Funds:</strong>
      </p>
    </div>
    <div class="col-xs-4">
      <p>
        <strong>Total Portfolio Value:</strong>
    </div>
  </div>
   <div class="row">
    <div class="col-xs-4">
      <p>
        <font color ="#2a67a4"><%= current_user.funds %><font>
      </p>
    </div>
    <div class="col-xs-4">
      <p>
        <font color ="#2a67a4"><%= current_user.available_funds %><font>
      </p>
    </div>
    <div class="col-xs-4">
      <p>
        <font color ="#2a67a4"><%= current_user.portfolios.select{|portfolio|portfolio.season.in_progress?}.inject(0){|total,portfolio|total + portfolio.total_book_value} %><font>
      </p>
    </div>
  </div>
  
  <div class="row">
    
    <% if @active_seasons.empty? %>
      <h2>Active Seasons</h2>
      <h5>You currently not associated with any active seasons.<h5>
      <h5>To join a season, click the 'Join A Season' button above.<h5>
    <% else %>
      <h2>Active Seasons</h2>
    <% end %>
  </div>
  
  
  <%= render 'seasons/active_season_index', seasons: @active_seasons %>

</div>
